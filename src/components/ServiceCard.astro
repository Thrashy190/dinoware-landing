---
const { name, description, imageUrl } = Astro.props;
---

<div class="group h-80 w-80 xl:h-96 xl:w-96 [perspective:1000px]">
  <div
    class="relative h-full w-full rounded-2xl shadow-2xl transition-all duration-500 [transform-style:preserve-3d] group-hover:[transform:rotateY(180deg)]"
  >
    <!-- Front face -->
    <div
      class="absolute inset-0 h-full w-full rounded-2xl [backface-visibility:hidden] bg-cover bg-center"
      style={`background-image: url('${imageUrl}')`}
    >
      <div
        class="h-full w-full rounded-2xl bg-gradient-to-b from-black/20 to-black/80 flex items-end p-4"
      >
        <p class="text-white text-xl font-semibold tracking-wide">{name}</p>
      </div>
    </div>

    <!-- Back face -->
    <div
      class="absolute inset-0 h-full w-full rounded-2xl bg-primary px-6 py-8 text-center text-white [transform:rotateY(180deg)] [backface-visibility:hidden]"
    >
      <div class="flex min-h-full flex-col items-center justify-between">
        <div>
          <h2 class="text-xl font-bold mb-4">{name}</h2>
          <p class="text-base text-pretty mb-6 leading-relaxed">
            {description}
          </p>
        </div>

        <a
          href="#"
          class="inline-block bg-secondary hover:brightness-140 text-black font-medium py-2 px-5 rounded-full transition-all duration-300"
        >
          Read More
        </a>
      </div>
    </div>
  </div>
</div>
