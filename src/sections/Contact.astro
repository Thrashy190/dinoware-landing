---
import stripes from "@/assets/stripes.svg";
import { Image } from "astro:assets";
---

<section id="contact" class="relative py-20 bg-white">
  <div class="max-w-3xl mx-auto px-6 text-center">
    <h2 class="text-4xl font-bold text-primary mb-4">Contact Us</h2>
    <p class="text-gray-600 mb-10">
      Have a question, idea, or project in mind? Weâ€™d love to hear from you.
    </p>

    <form class="grid grid-cols-1 gap-6 text-left">
      <div>
        <label for="name" class="block mb-1 font-medium text-gray-700">
          Name
        </label>
        <input
          type="text"
          id="name"
          name="name"
          class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-secondary"
          required
        />
      </div>

      <div>
        <label for="email" class="block mb-1 font-medium text-gray-700">
          Email
        </label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-secondary"
          required
        />
      </div>

      <div>
        <label for="message" class="block mb-1 font-medium text-gray-700">
          Message
        </label>
        <textarea
          id="message"
          name="message"
          rows="5"
          class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-secondary"
          required></textarea>
      </div>

      <button
        type="submit"
        class="bg-primary text-white font-semibold py-3 px-6 rounded-lg hover:bg-secondary transition"
      >
        Send Message
      </button>
    </form>
  </div>
</section>
