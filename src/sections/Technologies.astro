---
import { Image } from "astro:assets";
import stripes from "@/assets/stripes.svg";

import logo from "@/assets/dinoware-logo.svg";
---

<section
  class="w-full min-h-screen bg-primary flex items-center justify-center relative overflow-hidden px-4"
>
  <Image
    src={stripes}
    alt="Stripes superior rotado"
    class="absolute top-0 left-0 w-[800px] rotate-180 pointer-events-none z-0 opacity-30"
  />
  <Image
    src={stripes}
    alt="Stripes superior rotado"
    class="absolute bottom-0 right-0 w-[800px] pointer-events-none z-0 opacity-30 hidden md:flex"
  />

  <!-- Layout Desktop -->
  <div
    class="hidden lg:grid lg:grid-cols-4 lg:items-center lg:justify-center lg:min-h-screen max-w-7xl mx-auto"
  >
    <!-- Orbitas (col-span-3) -->
    <div class="relative col-span-3 flex items-center justify-center">
      <!-- Centro: Logo -->
      <div class="absolute z-10">
        <Image src={logo} alt="Logo" class="w-80 h-80" />
      </div>

      <!-- Orbita 1 -->
      <div
        class="absolute w-[30rem] h-[30rem] border-2 border-secondary rounded-full animate-spin-slow"
      >
        <img
          src="https://skillicons.dev/icons?i=js"
          class="orbit-icon"
          style="transform: translate(-50%, -17rem) rotate(0deg)"
        />
        <img
          src="https://skillicons.dev/icons?i=typescript"
          class="orbit-icon"
          style="transform: translate(10rem, -11rem) rotate(55deg)"
        />
        <img
          src="https://skillicons.dev/icons?i=python"
          class="orbit-icon"
          style="transform: translate(13rem, 0) rotate(90deg)"
        />
        <img
          src="https://skillicons.dev/icons?i=elixir"
          class="orbit-icon"
          style="transform: translate(9rem, 9rem) rotate(135deg)"
        />
        <img
          src="https://skillicons.dev/icons?i=java"
          class="orbit-icon"
          style="transform: translate(0, 13rem) rotate(180deg)"
        />
        <img
          src="https://skillicons.dev/icons?i=rust"
          class="orbit-icon"
          style="transform: translate(-11rem, 10rem) rotate(225deg)"
        />
        <img
          src="https://skillicons.dev/icons?i=go"
          class="orbit-icon"
          style="transform: translate(-16rem, 0) rotate(270deg)"
        />
        <img
          src="https://skillicons.dev/icons?i=cs"
          class="orbit-icon"
          style="transform: translate(-12rem, -12rem) rotate(315deg)"
        />
      </div>

      <!-- Orbita 2 -->
      <div
        class="absolute w-[40rem] h-[40rem] border-2 border-secondary rounded-full animate-spin-reverse-slower"
      >
        <img
          src="https://skillicons.dev/icons?i=react"
          class="orbit-icon"
          style="transform: translate(-21.5rem, 0) rotate(0deg)"
        />
        <img
          src="https://skillicons.dev/icons?i=nuxtjs"
          class="orbit-icon"
          style="transform: translate(-10rem, -20rem) rotate(335deg)"
        />
        <img
          src="https://skillicons.dev/icons?i=nextjs"
          class="orbit-icon"
          style="transform: translate(-16.5rem, -15rem) rotate(315deg)"
        />
        <img
          src="https://skillicons.dev/icons?i=astro"
          class="orbit-icon"
          style="transform: translate(-2rem, -22rem) rotate(0deg)"
        />
        <img
          src="https://skillicons.dev/icons?i=tailwind"
          class="orbit-icon"
          style="transform: translate(14rem, -14rem) rotate(235deg)"
        />
        <img
          src="https://skillicons.dev/icons?i=spring"
          class="orbit-icon"
          style="transform: translate(7rem, -20rem) rotate(30deg)"
        />
        <img
